{% extends "layout.html.twig" %}

{% block menu %}
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Versions</h1>
    <p class="text-center">Choose the language you want to display.</p>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <img src="/assets/img/nl.png"
      class="center-block img-circle img-responsive">
    <h3 class="text-center">nl_be</h3>
    <p class="text-center"><a href="#body_nl_be" data-smoothscroller>Vlaams</a></p>
  </div>
  <div class="col-md-6">
    <img src="/assets/img/fr.png"
      class="center-block img-circle img-responsive">
    <h3 class="text-center">fr_be</h3>
    <p class="text-center"><a href="#body_fr_be" data-smoothscroller>Fran√ßais</a></p>
  </div>
</div>
{% endblock %}

{% block contents %}
<div id="body_nl_be"><a href="#main_menu" data-smoothscroller>Back to versions</a>
{{ body_nl_be|raw }}
</div>

<div id="body_fr_be"><a href="#main_menu" data-smoothscroller>Back to versions</a>
{{ body_fr_be|raw }}
</div>
{% endblock %}

{% block customjs %}
<script>
$(function() {
  //Calls the tocify method on your HTML div.
  $(".toc_nl_be").toc({container: '#body_nl_be'});
  $(".toc_fr_be").toc({container: '#body_fr_be'});
});
</script>
{% endblock %}
