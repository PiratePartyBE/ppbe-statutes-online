    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/dashboard.css" />
    {% block customstyles %}{% endblock %}
    {% block head %}
      <title>Belgian Pirate Party Online Statutes</title>
    {% endblock %}
